{
  "name": "learnX",
  "version": "4.1.0",
  "scripts": {
    "android": "react-native run-android --no-jetifier",
    "android:beta": "bundle exec fastlane android beta",
    "android:build": "bundle exec fastlane android build",
    "ios": "react-native run-ios",
    "ios:beta": "bundle exec fastlane ios beta",
    "ios:build": "bundle exec fastlane ios build",
    "start": "react-native start",
    "lint": "tsc --noUnusedLocals && prettier -c \"src/**/*\" --write",
    "ios:test:debug": "detox build --configuration \"ios.sim.debug\" && detox test --configuration \"ios.sim.debug\"",
    "ios:test:release": "detox build --configuration \"ios.sim.release\" && detox test --configuration \"ios.sim.release\"",
    "postinstall": "chmod +x patches/patch.sh && patches/patch.sh && jetify"
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.6.1",
    "dayjs": "1.8.15",
    "expo-haptics": "6.0.0",
    "expo-secure-store": "6.0.0",
    "fuse.js": "3.4.5",
    "react": "16.8.6",
    "react-native": "0.60.4",
    "react-native-calendar-events": "1.7.3",
    "react-native-device-info": "2.3.2",
    "react-native-gesture-handler": "1.3.0",
    "react-native-interactable": "1.0.0",
    "react-native-modal": "11.3.1",
    "react-native-navigation": "2.26.4",
    "react-native-paper": "2.16.0",
    "react-native-reanimated": "1.1.0",
    "react-native-share": "2.0.0",
    "react-native-snackbar": "2.0.2",
    "react-native-tab-view": "2.9.0",
    "react-native-typography": "1.4.1",
    "react-native-unimodules": "0.5.2",
    "react-native-vector-icons": "6.6.0",
    "react-native-webview": "6.8.0",
    "react-redux": "7.1.0",
    "redux": "4.0.4",
    "redux-persist": "5.10.0",
    "redux-persist-expo-securestore": "2.0.0",
    "redux-thunk": "2.3.0",
    "rn-fetch-blob": "0.10.16",
    "thu-learn-lib-no-native": "2.1.6",
    "typesafe-actions": "5.0.0-3"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/runtime": "7.5.5",
    "@react-native-community/cli": "2.8.3",
    "@types/detox": "12.8.3",
    "@types/jasmine": "3.3.16",
    "@types/jest": "24.0.17",
    "@types/react": "16.8.24",
    "@types/react-native": "0.60.3",
    "@types/react-native-share": "1.1.2",
    "@types/react-native-tab-view": "1.0.6",
    "@types/react-native-vector-icons": "6.4.1",
    "@types/react-redux": "7.1.1",
    "babel-jest": "24.8.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "detox": "13.3.3",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "jetifier": "1.6.3",
    "metro-react-native-babel-preset": "0.55.0",
    "prettier": "1.18.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.0.0",
    "tslint-react-hooks": "2.2.1",
    "typescript": "3.5.3"
  },
  "babel": {
    "presets": [
      "module:metro-react-native-babel-preset"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console",
          "react-native-paper/babel"
        ]
      }
    }
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/learnX.app",
        "build": "xcodebuild -workspace ios/learnX.xcworkspace -scheme learnX -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build | xcpretty && exit ${PIPESTATUS[0]}",
        "type": "ios.simulator",
        "name": "iPhone Xs"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/learnX.app",
        "build": "xcodebuild -workspace ios/learnX.xcworkspace -scheme learnX -configuration Release -sdk iphonesimulator -derivedDataPath ios/build | xcpretty && exit ${PIPESTATUS[0]}",
        "type": "ios.simulator",
        "name": "iPhone Xs"
      }
    },
    "test-runner": "jest",
    "runner-config": "e2e/jest.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "license": "MIT",
  "private": true
}
